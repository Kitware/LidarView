{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21,
      "patch": 0
    },

  "configurePresets": [
    {
      "name": "ci_common",
      "binaryDir": "${sourceDir}/build/"
    }
  ],
    "testPresets": [
      {
        "name": "ci_common",
        "configurePreset": "ci_common",
        "hidden": true,
        "output": {"outputOnFailure": true},
        "execution": {
            "jobs": 1,
            "repeat": {"mode": "until-pass", "count": 3},
            "timeout": 120,
            "noTestsAction": "error"
        },
        "filter": {
            "exclude": {"name": "lv|Python"}
        }
      },
      {
        "name": "ci_ubuntu22_shared_debug",
        "inherits": ["ci_common"],
        "filter": {
            "exclude": {"name": "TestVelodyneHDLPositionReader"}
        }
      },
      {
        "name": "ci_windows_vs2019",
        "inherits": ["ci_common"]
      }
    ]
  }