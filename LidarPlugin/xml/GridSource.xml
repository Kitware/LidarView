<ServerManagerConfiguration>
  <!-- Begin vtkGridSource -->
  <ProxyGroup name="sources">
    <SourceProxy name="GridSource" class="vtkGridSource" label="Grid Source">
      <Documentation
        short_help="Generates a vtkPolyData measurement grid plane."
        long_help="Generates a vtkPolyData measurement grid plane.">
        Generates a vtkPolyData measurement grid plane.
      </Documentation>


      <IntVectorProperty
        name="GridNbTicks"
        command="SetGridNbTicks"
        number_of_elements="1"
        default_values="10">
      </IntVectorProperty>

      <IntVectorProperty
        name="LineWidth"
        command="SetLineWidth"
        number_of_elements="1"
        default_values="1">
      </IntVectorProperty>

      <DoubleVectorProperty
        name="Scale"
        command="SetScale"
        number_of_elements="1"
        default_values="10.0">
      </DoubleVectorProperty>

      <DoubleVectorProperty
        name="Origin"
        command="SetOrigin"
        number_of_elements="3"
        default_values="0.0 0.0 0.0">
      </DoubleVectorProperty>

      <DoubleVectorProperty
        name="Normal"
        command="SetNormal"
        number_of_elements="3"
        default_values="0.0 0.0 1.0">
      </DoubleVectorProperty>

      <DoubleVectorProperty
        name="Color"
        command="SetColor"
        number_of_elements="3"
        default_values="0.2 0.2 0.2">
      </DoubleVectorProperty>

    </SourceProxy>
  </ProxyGroup>
  <!-- End vtkGridSource -->
</ServerManagerConfiguration>
